{
	"compilerOptions": {
		"target": "es2021",
		"module": "commonjs",
		"outDir": "./dist",
		"esModuleInterop": true,
		"strict": true,
		"moduleResolution": "node",
		"typeRoots": [
			"node_modules/@types"
		],
		"forceConsistentCasingInFileNames": true,
		"useUnknownInCatchVariables": false,
		"experimentalDecorators": true,
		"strictPropertyInitialization": false,
		"emitDecoratorMetadata": true,
	},
	"exclude": [
		"node_modules",
		"dist"
	]
}
